<% if activity.capital.amount > 0 %>
<img src="/assets/icons/coins.png" height="16" width="16" border="0" class="icon"/>
<%= raw tr("Earned {capital}{currency_short_name} because opposers found {point_name} helpful", "view/activities/_activitycapitaldocumenthelpfulopposers_nouser", :capital => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :point_name => link_to((activity.document.name), activity.document))%>
<% else %>
<img src="/assets/icons/coins_delete.png" height="16" width="16" border="0" class="icon"/>
<%= raw tr("Lost {capital}{currency_short_name} because opposers found {point_name} unelpful", "view/activities/_activitycapitaldocumenthelpfulopposers_nouser", :capital => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :point_name => link_to((activity.document.name), activity.document))%>
<% end %>
